doi = {10.5772/10516},
file = {:C$\backslash$:/Users/Mateusz/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Forster, L. - 2011 - Machine Learning across the WSN Layers.pdf:pdf},
isbn = {978-953-307-082-7},
journal = {Cdn.Intechweb.Org},
